<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faultBg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andapp.futcorp.obdfut.FirstFaultCodes">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_car_fault_codes"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="103dp"
            android:layout_alignBottom="@+id/imageView7"
            android:layout_centerHorizontal="true"
            android:src="@drawable/motor_notif"
            android:onClick="goToMotorFaultCodes"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView18"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/yakit_notif"
            android:layout_marginTop="243dp"
            android:layout_marginLeft="71dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView8"
            android:layout_toStartOf="@+id/imageView8"
            android:onClick="goToYakitFaultCodes"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="68dp"
            android:layout_alignTop="@+id/imageView7"
            android:layout_centerHorizontal="true"
            android:src="@drawable/sasi_red"
            android:onClick="goToFirstPartFaultCodes"/>

        </GridLayout>
</RelativeLayout>
